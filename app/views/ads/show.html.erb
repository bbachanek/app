<div class="col-md-3">
  <%= image_tag @ad.image, class: "img-responsive" %>
</div>

<div class="col-md-9">
  <div class="col-md-12">
    <h4><%= @ad.title %></h4>
    <hr>
  </div>
  <div class="col-md-6">
    <strong>Price:</strong>
    <%= @ad.price %>
  </div>
  <div class="col-md-6">
    <strong>Address:</strong>
    <%= @ad.address %>, <%= @ad.city %>
  </div>
  <div class="col-md-12">
    <hr>
    <strong>Description:</strong><br>
    <%= simple_format @ad.description %>
  </div>
</div>